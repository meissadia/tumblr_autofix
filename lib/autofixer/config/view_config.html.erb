<html>
<head>
  <title><%= fname %></title>
  <%= style %>
</head>
<body>
  <h1>Ignore</h1>
  <ul>
    <% @ignore.each do |i| %>
    <li><%= i %></li>
    <% end %>
  </ul>

  <h1>Last Tag</h1>
  <ul>
    <% @last_tag.each do |i| %>
    <li><%= i %></li>
    <% end %>
  </ul>

  <h1>Summary</h1>
  <ul>
    <% @summary.each do |i| %>
    <li><%= i %></li>
    <% end %>
  </ul>

  <h1>Tag Index</h1>
  <% @tag_idx.each_with_index do |blog_list, idx| %>
  <h2>Tag <%= idx %></h2>
  <ul>
    <% blog_list.each do |blog| %>
    <li><%= blog %></li>
    <% end %>
  </ul>
  <% end %>

  <footer>Updated at <%= Time.now.strftime('%d/%m/%Y') %></footer>
</body>
</html>
